<Page x:Class="WpfApp5.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5.Pages"
      mc:Ignorable="d"
      Title="Authorization" Width="498" Height="296">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="2" BorderBrush="#00ADEF" CornerRadius="10">
            <StackPanel Margin="20">
                <TextBlock Text="Вход" FontSize="24" FontWeight="Bold" Margin="175,0,170,10"/>
                <TextBox x:Name="txtUsername" ToolTip="Email" Margin="100,0,100,20" Height="16" Width="214"/>
                <PasswordBox x:Name="txtPassword" ToolTip="Password" Margin="100,0,100,20"/>
                <Button Content="Вход" Margin="100,0,100,20" Background="#00ADEF" Foreground="White" FontWeight="Bold" Click="Button_Click"/>
                <TextBlock Text="Нет аккаунта? Зарегистрироваться" TextDecorations="Underline" Margin="110,0,110,10"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
